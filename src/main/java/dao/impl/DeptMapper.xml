<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTDConfig 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.IdepMapper">
    <insert id="addUser" parameterType="Users">
INSERT INTO users(userName) VALUE(#{userName})
    </insert>
    <delete id="deleteUser">
DELETE FROM users WHERE id=#{xxx}
    </delete>
    <update id="updateUser" parameterType="Users">
UPDATE users	 SET userName=#{userName} WHERE	 id =#{user_id}
    </update>
    <select id="findUserById" resultType="Users">
        SELECT  * FROM  users where  id=#{xxx}
    </select>
    <select id="findUserAll" resultType="Users">
             SELECT  * FROM  users
    </select>
</mapper>